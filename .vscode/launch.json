    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        // Launch this from folder (FuzzAll)
        // python fuzz.py \
        // --language cpp --num 10 --evaluate --otf --level 3 \
        // --template cpp_expected \
        // --bs 1 --temperature 1.0 --prompt_strategy 0 --use_hw
        {
            "name": "FuzzAll CPP - Evaluate",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/FuzzAll/fuzz.py",
            "console": "integratedTerminal",
            "args": [
                "--language", "cpp",
                "--num", "10",
                "--evaluate",
                "--otf",
                "--level", "3",
                "--resume",
                "--template", "cpp_expected",
                "--bs", "1",
                "--temperature", "1.0",
                "--prompt_strategy", "0",
                "--use_hw"
            ],
            "justMyCode": true
        },
        {
            "name": "FuzzAll CPP - Fuzz",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/FuzzAll/fuzz.py",
            "console": "integratedTerminal",
            "args": [
                "--language", "cpp",
                "--num", "1000",
                "--resume",
                "--otf",
                "--level", "3",
                "--template", "cpp_expected",
                "--bs", "100",
                "--temperature", "1.0",
                "--prompt_strategy", "0",
                "--use_hw"
            ],
            "justMyCode": true
        },
        // use conda environment qiskitFuzz
        {
            "name": "FuzzAll QISKIT - Fuzz",
            "type": "python",
            "python": "${userHome}/.conda/envs/qiskitFuzz/bin/python",
            "request": "launch",
            "program": "${workspaceFolder}/FuzzAll/fuzz.py",
            "console": "integratedTerminal",
            "args": [
                "--language", "qiskit",
                "--num", "100",
                "--resume",
                "--folder", "Results/qiskit",
                "--otf",
                "--level", "3",
                "--template", "qiskit_parameter",
                "--bs", "1",
                "--temperature", "1.0",
                "--prompt_strategy", "0",
                "--use_hw"
            ],
            "justMyCode": true,
        },
    ]
}
